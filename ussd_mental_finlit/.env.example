# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
PORT=5000

# Database Configuration
# For development: sqlite:///path/to/dev_realworks.db
# For production: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///dev_realworks.db

# Africa's Talking Configuration
AFRICASTALKING_API_KEY=your_api_key_here
AFRICASTALKING_USERNAME=your_username_here
AFRICASTALKING_SHORTCODE=your_shortcode_here

# Rate Limiting
# Use Redis in production: redis://localhost:6379
REDIS_URL=memory://

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/realworks.log

# Session Configuration
SESSION_TIMEOUT_HOURS=24
